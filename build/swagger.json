    "host": "localhost:5000",
    "basePath": "/api",
    "tags": [
        {
            "name": "Crafts",
            "description": "API for Crafts"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/craft": {
            "post": {
                "tags": [
                    "Crafts"
                ],
                "summary": "Create new craft  in system",
                "description": "Create new craft  in system",
                "parameters": [
                    {
                        "name": "craft",
                        "in": "body",
                        "description": "Craft that we want to create",
                        "schema": {
                            "$ref": "#/definitions/PostCraft"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "New craft is created",
                        "schema": {
                            "$ref": "#/definitions/PostCraftResponse"
                        }
                    }
                }
            },
            "get": {
                "tags": [
                    "Crafts"
                ],
                "summary": "Get all crafts in system",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/GetCraftsResponse"
                        }
                    }
                }
            }
        },
        "/craft/{craftId}": {
            "parameters": [
                {
                    "name": "craftId",
                    "in": "path",
                    "required": true,
                    "description": "ID of craft that we want to update or delete",
                    "schema": {
                        "type": "string"
                    }
                }
            ],
            "delete": {
                "summary": "Delete craft with given ID",
                "tags": [
                    "Crafts"
                ],
                "responses": {
                    "200": {
                        "description": "Craft is deleted",
                        "schema": {
                            "$ref": "#/definitions/CraftResponse"
                        }
                    }
                }
            },
            "put": {
                "summary": "Update craft with give ID",
                "tags": [
                    "Crafts"
                ],
                "parameters": [
                    {
                        "name": "craft",
                        "in": "body",
                        "description": "Craft with new values of properties",
                        "schema": {
                            "$ref": "#/definitions/UpdateCraft"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Craft is updated",
                        "schema": {
                            "$ref": "#/definitions/CraftResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "PostCraft": {
            "required": [
                "name",
                "material",
                "price",
                "description"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "material": {
                    "type": "string"
                },
                "price": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "photo": {
                    "type": "string"
                }
            }
        },
        "UpdateCraft": {
            "type": "object",
            "required": [
                "name",
                "material",
                "price",
                "description",
                "_id"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "material": {
                    "type": "string"
                },
                "price": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "photo": {
                    "type": "string"
                },
                "_id": {
                    "type": "string"
                }
            }
        },
        "GetCraftsResponse": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/UpdateCraft"
            }
        },
        "CraftResponse": {
            "$ref": "#/definitions/UpdateCraft"
        }
    }
